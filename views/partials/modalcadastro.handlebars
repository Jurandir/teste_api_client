  <!-- Modal -->
  <modalcadastro>
    <div class="modal fade" id="ModalCadastro" role="dialog">
        <div class="modal-dialog modal-xl modal-dialog-centered">
        
        <!-- Modal content-->
        <div class="modal-content">
            <form action="<%= action %>" method="POST">
            <div class="modal-header">
            <h4 class="modal-title text-info"><i class="fa fa-cogs text-info" style="font-size:36px;"></i> {{tela}}</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="font-weight-bold text-info" for="nome">Nome</label>
                    <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite o nome" value="{{this.no_bancos}}" />
                </div>
                <div class="form-group">
                    <label class="font-weight-bold text-info" for="codigo">Código</label>
                    <input type="number" class="form-control" id="codigo" name="codigo" placeholder="Digite o código" value="{{this.co_bancos}}" />
                </div>
            </div>
            <div class="modal-footer">
            <input type="submit" value="Salvar" class="btn btn-outline-success"/>
            <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Fechar</button>
            </div>
            </form>
        </div>
        
        </div>
    </div>
  </modalcadastro>

